<% layout('/layouts/boilerplate') %>

<form class="form-control" action="/api/update/<%= person._id %>?_method=PATCH" method="POST">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= person.name  %>">
        <p class="name error text-danger"></p>
      </div>
      <div class="mb-3">
        <label for="phoneNumber" class="form-label">Phone Number</label>
        <input type="text" class="form-control" id="phoneNumber" name="phoneNumber"  value="<%= person.phoneNumber  %>">
        <p class="phoneNumber error text-danger"></p>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" class="form-control" id="email" name="email"  value="<%= person.email  %>">
        <p class="email error text-danger"></p>
      </div>
    <div class="mb-3">
      <label for="hobbies" class="form-label">Hobbies</label>
      <input type="text" class="form-control" id="hobbies" name="hobbies"  value="<%= person.hobbies  %>">
      <p class="text-muted">Enter Hobbies in comma separated format... Example: playing cards, walking dog, etc</p>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
  </form>
